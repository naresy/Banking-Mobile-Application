<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login_form"
    android:layout_width="match_parent"
    android:background="@color/back"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/connect"
                android:layout_height="150sp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="9sp"
                app:cardElevation="5sp"
                android:layout_margin="15sp"
                android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:text="General Information"
                    android:layout_marginStart="24sp"
                    android:fontFamily="@font/lato_light"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="5sp"
                    android:layout_height="wrap_content">

                </TextView>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Full Name"
                    android:layout_marginEnd="24sp"
                    android:layout_marginStart="24sp"
                    android:layout_marginTop="10sp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/register_user_name"
                        android:padding="10sp"
                        android:inputType="text"/>

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Phone"
                    android:layout_marginEnd="24sp"
                    android:layout_marginStart="24sp"
                    android:layout_marginTop="10sp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/register_user_phone"
                        android:padding="10sp"
                        android:maxLength="10"
                        android:inputType="number"/>

                </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:layout_marginEnd="24sp"
                android:layout_marginStart="24sp"
                android:layout_marginTop="10sp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/register_user_email"
                    android:padding="10sp"
                    android:inputType="textEmailAddress"/>

            </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:text="Login Information"
                    android:layout_marginStart="24sp"
                    android:fontFamily="@font/lato_light"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="10sp"
                    android:layout_height="wrap_content">
                </TextView>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24sp"
                android:layout_marginStart="24sp"
                app:passwordToggleEnabled="true"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:hint="  Password">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/user_register_password"
                    android:drawableStart="@drawable/ic_password"
                    android:inputType="textPassword"
                    android:padding="8sp"
                    android:layout_marginBottom="10sp"/>

            </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10sp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:layout_weight="1"
                    android:layout_marginStart="24sp"
                    android:layout_marginEnd="24sp"
                    android:text="Cancel"
                    android:background="@color/white"
                    android:fontFamily="@font/lato_light"
                    android:id="@+id/login_email_cancel"
                    android:textSize="10sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/color_primary"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:layout_marginStart="24sp"
                    android:layout_marginEnd="24sp"
                    android:text="Create"
                    android:background="@color/color_primary"
                    android:fontFamily="@font/lato_light"
                    android:id="@+id/login_email"
                    android:textSize="10sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"/>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>